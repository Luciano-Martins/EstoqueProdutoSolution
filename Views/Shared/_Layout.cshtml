@namespace EstoqueWeb.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


@{
    var controllerAtual = ViewContext.RouteData.Values["controller"].ToString();
    var classeMenuPrincipal = controllerAtual == "Home" ? "active" : "";
    var classeMenuProduto = controllerAtual == "Produto" ? "active" : "";
    var classeMenuCategoria = controllerAtual == "Categoria" ? "active" : "";
    var classeMenuCliente = controllerAtual == "Cliente" ? "active" : "";
}



<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/lib/bootstrap5/dist/css/bootstrap.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/lib/bootstrap-icons/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href=" ./css/estilos.css">
    <title>EstoqueWeb :: @ViewBag.Subtitulo</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand"href="/">EstaoqueWeb</a>
            <button class="navbar-toggler"type="button"data-bs-toggle="collapse"data-bs-target="#navbarMain">
             <spam class="navbar-toggle-icon"></spam>
            </button>
            <div classe="collapse navbar-collapse"id="navbarMain">
                <div class="navbar-nav ms-auto">
                    <a class="nav-link @classeMenuPrincipal" asp-controller="Home"asp-action="Index">Principal</a>
                    <a class="nav-link @classeMenuProduto" asp-controller="Produto" asp-action="Index">Produtos</a>
                    <a class="nav-link @classeMenuCategoria" asp-controller="Categoria" asp-action="Index">Categoria</a>
                    <a class="nav-link @classeMenuCliente" asp-controller="Cliente" asp-action="Index">Clientes</a>
                </div>

            </div>
        </div>
    </nav>
    <div class="container mt-2 ">
        @RenderBody();
    </div>

    <div class="text-light bg-dark p-3 fixed-bottom text-center">
        EstoqueWeb&copy; @DateTime.Now.Year.ToString()<br>
        Todos Direitos Reservados

    </div>
    <script src="~/lib/bootstrap5/dist/js/bootstrap.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"defer></script>



  @RenderSection("Scripts" , false)
</body>
</html>