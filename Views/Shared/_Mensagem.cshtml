
@if (TempData.ContainsKey("mensagem"))//aqui verifico se TempData tem uma chave chamada "mensagem"
{
    //aqui a variavel mensagem vai receber um objeto MensagemModel Desserializado que estiver um TempData
    var mensagem = MensagemModel.Desserializar(TempData["mensagem"].ToString());
    //aqui eu testo se o tipo dessa Mensagem é de erro, senão ,mostro de informação
    @if (mensagem.Tipo == TipoMensagem.Erro)
    {
       <div class="alert alert-warning mt-3 alert-dismissible fade show"role="alert">
        @mensagem.Texto
        <button type="button btn-close" data-bs-dismiss="alert"></button>
       </div>   
    }
    else
    {
        <div class="alert alert-success mt-3 alert-dismissible fade show"role="alert">
            @mensagem.Texto
         <button type="button btn-close" data-bs-dismiss="alert"></button>
        </div>

    }
    

   
}